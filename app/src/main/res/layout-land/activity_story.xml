<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:id="@+id/iv_next"
        android:layout_marginEnd="@dimen/_25sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/selector_scroll_arrows"
        app:srcCompat="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:id="@+id/iv_previous"
        android:layout_marginStart="@dimen/_25sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/selector_scroll_arrows"
        app:srcCompat="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_overlay_background"
        android:id="@+id/cl_title_overlay">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/dimens_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:textSize="@dimen/_26ssp"
            android:textStyle="bold"
            android:maxLines="1"
            tools:text="Reflection"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_7sdp"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tv_subject_story_length"
            app:layout_constraintEnd_toStartOf="@id/ll_count"
            app:layout_constraintBottom_toTopOf="@id/tv_subject_story_length"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_subject_story_length"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/_25sdp"
            android:textColor="@color/white_40"
            tools:text="Physics . 4 min read"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_count"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:background="@drawable/shape_rect_rounded_corner_100dp_solide_white_20"
            android:padding="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_current_page_count"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_totoal_pages"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/white_40"
                android:textStyle="bold"
                tools:text=" / 20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>